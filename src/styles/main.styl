blueish-green = #73afb6
gold          = hsl(70, 20%, 60%)
reddish       = hsl(355, 20%, 30%)
darkish       = #555
lightish      = #eee
btn-yellowish = hsl(70, 15%, 90%)

body .ged-popover
  position:    fixed
  left:        100px
  top:         100px
  bottom:      100px
  background:  lightish
  color:       darkish
  z-index:     9999
  border:      solid #2b2301 1px
  line-height: 1.5
  font-size:   11pt
  overflow-y:  auto
  min-width:   490px
  text-align:  left

  *
    box-sizing:    border-box

    line-height: 1.5

  form
    width:      100%
    background: darkish
    color:      lightish
    height:     55px

  canvas, button, input
    float: left

  canvas
    margin:      15px
    margin-left: 12px
    margin-top:  17px
    cursor:      pointer

  button, input
    background: lightish
    color:      darkish
    padding:    5px 15px
    margin:     15px
    margin-top: 10px

  input
    border-radius: 15px
    outline:       none
    border:        solid black 1px
    width:         200px
    margin-left:   0px
    margin-right:  0px

  button
    border:      solid black 1px
    background:  lightish
    margin-left: 10px
    cursor:      pointer

    &:hover
      background: #bbb

  button, input, td
    font-size: 1em

  .ged-popover-content
    font-family: Helvetica
    padding:     20px

    h1, h2, h3
      margin:       0px 0px 0px 0px

    h2, h3
      border-bottom-width: 0px
    ///////////////

    h1
      font-size:     3em
      border-bottom: solid darkish 1px
      width:         50%

    h2
      font-size: 2em


    table.ged-popover-entry-table, td.ged-popover-entry-cell
      border-width: 0px
      margin:       0px 0px 0px 0px

    td
      padding-top:    2px
      padding-right:  10px
      padding-bottom: 2px
      padding-left:   0px

      &:first-child
        padding-right: 50px

.ged-popover-close
  font-size: 20pt
  cursor:    pointer
  display:   inline-block
  position:  absolute
  right:     25px
  top:       8px

.ged-popover-section
  padding-top: 10px

